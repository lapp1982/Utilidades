@echo off 
title Reiniciando el sistema
echo Menu general
echo ------------
echo.
echo  1. Reiniciar en 20 segundos
echo  2. Reiniciar en 40 segundos
echo  3. Reiniciar en 1 minuto
echo  4. Reiniciar en 2 minutos
echo  5. Reiniciar en 5 minutos
echo  6. Reiniciar en 10 minutos
echo  7. Reiniciar en 15 minutos
echo  8. Reiniciar en 30 minutos
echo  9. Reiniciar en 45 minutos
echo 10. Reiniciar en 1 hora
echo 11. Reiniciar en 2 horas
echo 12. Reiniciar en 3 horas
echo 13. Reiniciar en 4 horas
echo 14. Reiniciar en 5 horas
echo 15. Reiniciar en 6 horas
echo 16. Reiniciar en 7 horas
echo 17. Reiniciar en 8 horas
echo 18. Reiniciar en 9 horas
echo 19. Supender reinicio
echo 20. SALIR
echo.
echo Introduzca una opcion:
set /p opc=
if %opc%==1 goto 20 
if %opc%==2 goto 40 
if %opc%==3 goto 01 
if %opc%==4 goto 02 
if %opc%==5 goto 05 
if %opc%==6 goto 10 
if %opc%==7 goto 15 
if %opc%==8 goto 30 
if %opc%==9 goto 45 
if %opc%==10 goto 1 
if %opc%==11 goto 2 
if %opc%==12 goto 3 
if %opc%==13 goto 4 
if %opc%==14 goto 5 
if %opc%==15 goto 6
if %opc%==16 goto 7 
if %opc%==17 goto 8 
if %opc%==18 goto 9 
if %opc%==19 goto 100 
if %opc%==20 goto 101

:20 
cls 
shutdown -r -f -t 20 -c "Reiniciando el sistema en 20 segundos" 
exit 

:40 
cls 
